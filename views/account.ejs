  <body>
      <div class="topnav" id="myTopnav">
      <a style="font-size: 24px;" href="/" class="active">StruGo</a>
      <a style="float: inline-end;" href="/#about">About</a>
      <a style="float: inline-end;" href="/">Home</a>
      <a href="javascript:void(0);" class="icon" onclick="myFunction()">
        <i class="fa fa-bars"></i>
      </a>
      <div class="search">
        <form action="/HomePage/business/search" method="post" >
    
          <input type="text" id="searchInput" name="searchTerm" placeholder="Search here..."required>
        </form>
      </div>
    </div>


    <br>
    <br>
        <div class="cont">
            <div class="form sign-in">
                <h2>Welcome</h2>
                <form action="/HomePage/userPage" method="POST">
                <label>
                    <span>Email</span>
                    <input id="email" name="email" type="email" />
                </label>
                <label>
                    <span>Password</span>
                    <input id="password" name="password" type="password" />
                </label>
               
                <button type="submit" class="submit" >Sign In</button>
                <% if (message) { %>
                    <h2 class="message"><%= message %></h2>
                  <% } %>
                <% if (success) { %>
                    <h2 class="success"><%= success %></h2>
                  <% } %>

            </form>
            </div>

            <div class="sub-cont">
                <div class="img">
                    <div class="img__text m--up">
                     
                        <h3>Don't have an account? Please Sign up!<h3>
                    </div>
                    <div class="img__text m--in">
                    
                        <h3>If you already have an account, just sign in.<h3>
                    </div>
                    <div class="img__btn">
                        <span class="m--up">Sign Up</span>
                        <span class="m--in">Sign In</span>
                    </div>
                </div>

                <div id="signup" class="form sign-up">
                    <h2>Create your Account</h2>
                    <form action="/HomePage/account" method="POST">
                    <label for="name">
                        <span>Name</span>
                        <input id="name" type="text" <% if(userData.name && userData.name.value) {%>                         
                            value="<%- userData.name.value%>"
                        <% } %> name="name" />
                        <% if(userData.name && !userData.name.valid) {%>
                            <div class="text-danger mt-1 ms-2">
                                <small style="color: red;"> <%- userData.name.errorMsg %> </small>
                            </div>
                            <% } %> 
                    </label>
                    <label>
                        <span for="email" >Email</span>
                        <input type="email" name="email" id="email"<% if(userData.email && userData.email.value) {%>                         
                            value="<%- userData.email.value%>"
                        <% } %> />
                        <% if(userData.email && !userData.email.valid) {%>
                            <div class="text-danger mt-1 ms-2">
                                <small style="color: red;"> <%- userData.email.errorMsg %> </small>
                            </div>
                            <% } %> 
                    </label>
                    <label>
                        <span for="password">Password</span>
                        <input type="password" name="password" id="password" <% if(userData.password && userData.password.value) {%>                         
                            value="<%- userData.password.value%>"
                        <% } %> />
                        <% if(userData.password && !userData.password.valid) {%>
                            <div class="text-danger mt-1 ms-2">
                                <small style="color: red;"> <%- userData.password.errorMsg %> </small>
                            </div>
                            <% } %> 
                    </label>
                    <button type="submit" class="submit">Sign Up</button>
                  
                </form>
                
                    
                </div>
            </div>
        </div>
    
   


